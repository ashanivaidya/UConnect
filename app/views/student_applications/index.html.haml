%h1 Applications

%table#student_applications{:cellpadding => 1, :cellspacing => 10}
  %thead
    %tr
      %th Institution
      %th Program
      %th Degree
      %th Begin Year
  %tbody
    - @student_applications.each do |student_application|
      %tr
        %td= student_application.university_name
        %td= student_application.program
        %td= student_application.degree
        %td= student_application.year_start
        %td= link_to "View", student_application_path(student_application)
        %td= link_to "Edit", edit_student_application_path(student_application)
        %td= link_to "Delete", student_application_path(student_application), :method => :delete, :confirm => 'Are you sure you want to delete this application?'

= link_to 'Return to Home Page', students_show_path